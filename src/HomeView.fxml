<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomeViewController">
   <children>
      <!--search window-->
      <TextField fx:id="search" layoutX="61.0" layoutY="24.0" onAction="#searchWeb" prefHeight="27.0" prefWidth="302.0" promptText="Let's Googling!" />

      <!--task input field-->
      <Button fx:id="ok" layoutX="502.0" layoutY="124.0" mnemonicParsing="false" onAction="#addNewTodo" text="OK!" />
      <JFXTextField fx:id="todo" layoutX="259.0" layoutY="124.0" onAction="#addNewTodo" prefHeight="27.0" prefWidth="232.0" promptText="To Do" />

      <!--todolist with timer-->
      <JFXTreeTableView fx:id="todoListTable" layoutX="1.0" layoutY="191.0" prefHeight="321.0" prefWidth="799.0" />
      <JFXComboBox fx:id="subject" layoutX="14.0" layoutY="124.0" onAction="#setCategoryOption" prefHeight="27.0" prefWidth="109.0" promptText="Subject" />
      <JFXComboBox fx:id="category" layoutX="141.0" layoutY="124.0" prefHeight="27.0" prefWidth="102.0" promptText="Category" />

   </children>
</AnchorPane>
